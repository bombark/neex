<%= form_for(@node) do |f| %>
	<% if @node.errors.any? %><div id="error_explanation">
		<ul><% @node.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<%end%></ul>
	</div><% end %>
	<div class="field">
		<%= f.label :name %><br>
		<%= f.text_field :name, class: "form-control"%>
	</div>
	<div class="actions"><%= f.submit class:"btn btn-primary btn-lg btn-block" %></div>
<% end %>
